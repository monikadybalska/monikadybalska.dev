---
import BaseLayout from "./BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
---

<BaseLayout title="Monika Dybalska">
  <Navbar />
  <main>
    <slot />
  </main>
</BaseLayout>

<style>
  body {
    margin: 0;
    flex-grow: 1;
    display: block;
    overflow: scroll;
  }

  body,
  html {
    scroll-snap-type: y mandatory;
  }

  main {
    display: block;
    box-sizing: border-box;
    overflow: visible;
  }
</style>
