---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/md.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="background"
      width="100%"
      height="100%"
    >
      <filter id="noiseFilter">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="10"
          numOctaves="6"
          stitchTiles="stitch"></feTurbulence>
      </filter>

      <rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
    </svg>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Drogowskaz";
    src: url("/fonts/Drogowskaz_lekki_owalny.woff") format("woff");
    font-weight: light;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Zaklad";
    src: url("/fonts/Zaklad-Regular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  html {
    font-family: "Drogowskaz";
  }

  .background {
    filter: contrast(100%) brightness(100%);
    position: fixed;
    background: linear-gradient(
        0deg,
        rgba(78, 35, 97, 1),
        rgba(248, 245, 236, 1)
      ),
      url(/noise.svg);
    z-index: -1;
  }

  body {
    margin: 0;
  }

  h1 {
    font-family: "Zaklad";
    text-decoration: underline solid #61dafb;
    margin: 0;
    font-size: 4rem;
  }

  h2 {
    font-family: "Zaklad";
    text-decoration: underline solid #61dafb;
    margin: 0;
    font-size: 3rem;
  }

  h3 {
    font-size: 1.17rem;
    text-decoration: underline solid #61dafb;
    margin: 0;
  }

  p {
    margin: 0;
  }

  a {
    text-decoration: none;
    color: black;
  }

  main {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    margin-bottom: 10rem;
  }

  .homepage-section,
  section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1280px;
    margin-top: 5rem;
    margin-bottom: 5rem;
    box-sizing: border-box;
  }

  .section-text {
    margin-right: 50px;
    max-width: 660px;
    display: flex;
    flex-direction: column;
    justify-content: start;
  }

  .section-title {
    margin-bottom: 1rem;
  }

  .cols {
    flex-direction: column;
  }

  .label {
    padding: 0.2rem 0.5rem 0.2rem 0.5rem;
    background-color: rgb(97, 218, 251, 1);
    width: fit-content;
    color: black;
    border: black 1px solid;
    text-transform: uppercase;
    font-size: 0.8rem;
    border-radius: 1rem;
    text-align: center;
  }

  .project-header {
    width: 100%;
  }

  @keyframes ripple {
    to {
      transform: scale(4);
      opacity: 0;
    }
  }

  @media screen and (max-width: 1300px) {
    .homepage-section,
    section {
      flex-direction: column;
      align-items: center;
      padding: 0 5rem 0 5rem;
    }

    .section-text {
      width: 100%;
      max-width: none;
    }
  }

  @media screen and (max-width: 700px) {
    .homepage-section,
    section {
      flex-direction: column;
      padding: 0 2rem 0 2rem;
    }

    h1 {
      font-size: 3rem;
    }
  }
</style>
