---
import Anchor from "./Anchor.astro";
import { Image } from "astro:assets";
import monikadybalska from "../images/monikadybalska.jpg";
---

<section id="intro">
  <div class="about-text col">
    <p>Hi there, my name is</p>
    <h1>Monika Dybalska</h1>
    <p class="subtitle">
      I'm a frontend developer with a passion for building <span class="glow"
        >unique</span
      >, <span class="glow">user-centric</span>, and <span class="glow"
        >performant</span
      > websites and applications.
    </p>
    <Anchor
      href="/cv-monika-dybalska.pdf"
      text="Download Resume"
      variant="primary"
    />
  </div>
  <div class="col hero-image-col">
    <div class="hero-image-container">
      <div class="diamond">
        <Image
          src={monikadybalska}
          alt="Headshot of Monika Dybalska"
          widths={[200, 500]}
          sizes="(max-width: 700px) 200px, 500px"
          width="260"
          format="webp"
          loading="lazy"
          class="hero-image"
        />
      </div>
    </div>
  </div>
</section>

<style>
  #intro {
    margin-top: 10rem;
    margin-bottom: 10rem;
  }

  p {
    font-size: 1.5rem;
  }

  .subtitle {
    margin-bottom: 20px;
    font-size: 2rem;
  }

  .glow {
    text-shadow: rgb(71, 209, 175) 1px 0 10px;
  }

  .col {
    opacity: 0;
    will-change: transform;
  }

  .hero-image-col {
    display: flex;
    width: 40%;
    justify-content: center;
  }

  .hero-image-container {
    width: 340px;
    height: 340px;
    display: flex;
    overflow: clip;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .diamond {
    width: 200px;
    height: 200px;
    overflow: clip;
    rotate: 45deg;
    border: solid #173f35 10px;
    box-shadow: 0 0 0 10px #4e2361;
  }

  .hero-image {
    rotate: -45deg;
    position: fixed;
    top: -50px;
    left: -20px;
  }

  .hero-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .socials {
    height: 40px;
    align-self: center;
  }

  @media screen and (max-width: 1300px) {
    .hero-image-col {
      width: 100%;
    }
  }

  @media screen and (max-width: 700px) {
    #intro {
      margin-top: 5rem;
      margin-bottom: 5rem;
    }

    .hero-image-container {
      width: 250px;
      height: 250px;
      margin-top: 50px;
    }

    .col {
      opacity: 1;
      will-change: unset;
    }

    .diamond {
      width: 150px;
      height: 150px;
    }

    .hero-image {
      top: -40px;
      left: -15px;
      width: 190px;
      height: auto;
    }

    .subtitle {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  const section = document.querySelector("#intro");

  if (section && window.innerWidth > 700) {
    const cols = section.querySelectorAll(".col");

    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          cols[0].classList.add("slide-right", "delay-600");
          cols[1].classList.add("slide-down");
        }
      },
      {
        threshold: 0.6,
      }
    );
    observer.observe(section);
  }
</script>
