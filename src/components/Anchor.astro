---
interface Props {
  text: string;
  href: string;
  variant?: string;
}

const { text, href, variant = "text" } = Astro.props;
---

<a href={href} target="_blank" class={variant}>{text}<span></span></a>

<style>
  a {
    height: fit-content;
    width: fit-content;
    position: relative;
    overflow: hidden;
    transition: all 400ms;
    text-transform: uppercase;
    font-family: "Drogowskaz";
    padding: 0.5rem 1rem 0.5rem 1rem;
    border: 0;
    cursor: pointer;
    box-sizing: border-box;
  }

  a.primary {
    background-color: black;
    color: white;
  }

  a.secondary {
    background-color: transparent;
    color: black;
    border: solid black;
  }

  a.text {
    background-color: transparent;
    color: inherit;
    padding: 0;
    text-align: start;
  }

  a.primary span,
  a.secondary span {
    position: absolute;
    border-radius: 50%;
    transform: scale(0);
    animation: ripple 600ms linear;
    background-color: rgba(97, 218, 251, 0.7);
    color: rgb(97, 218, 251);
  }

  a.primary:hover,
  a.primary:focus {
    color: #61dafb;
    box-shadow: 0 0 0.5rem 0.1rem rgb(97, 218, 251, 1);
  }

  a.text:hover {
    text-decoration: underline solid;
  }
</style>

<script>
  import { createRipple } from "../../lib/functions";

  const anchors = document.querySelectorAll("a");
  for (const anchor of anchors) {
    anchor.addEventListener("click", createRipple);
  }
</script>
