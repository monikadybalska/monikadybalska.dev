---
interface Props {
  text: string;
  href: string;
  variant?: string;
}

const { text, href, variant = "text" } = Astro.props;
---

<a href={href} class={variant}>{text}<span></span></a>

<style>
  a {
    height: fit-content;
    width: fit-content;
  }

  a.primary {
    position: relative;
    overflow: hidden;
    transition: all 400ms;
    background-color: black;
    color: white;
    text-transform: uppercase;
    font-family: "Drogowskaz";
    padding: 0.5rem 1rem 0.5rem 1rem;
    outline: 0;
    border: 0;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.3);
    cursor: pointer;
    box-sizing: border-box;
  }

  a.secondary {
    position: relative;
    overflow: hidden;
    transition: all 400ms;
    background-color: transparent;
    color: black;
    text-transform: uppercase;
    font-family: "Drogowskaz";
    padding: 0.5rem 1rem 0.5rem 1rem;
    outline: 0;
    border: solid black;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.3);
    cursor: pointer;
    box-sizing: border-box;
  }

  a.text {
    position: relative;
    overflow: hidden;
    transition: all 400ms;
    background-color: transparent;
    color: inherit;
    text-transform: uppercase;
    font-family: "Drogowskaz";
    padding: 0;
    outline: 0;
    border: 0;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.3);
    cursor: pointer;
    box-sizing: border-box;
    text-align: start;
  }

  a.primary span,
  a.secondary span {
    position: absolute;
    border-radius: 50%;
    transform: scale(0);
    animation: ripple 600ms linear;
    background-color: rgba(97, 218, 251, 0.7);
    color: rgb(97, 218, 251);
  }

  a.primary:hover,
  a.text:hover {
    color: #61dafb;
  }
</style>

<script>
  function createRipple(event: MouseEvent) {
    const button = event.currentTarget as HTMLButtonElement;
    const btnRect = button.getBoundingClientRect();

    const circle = document.querySelector("span") as HTMLSpanElement;
    const diameter = Math.max(btnRect.width, btnRect.height);
    const radius = diameter / 2;
    circle.style.width = `${diameter}px`;
    circle.style.height = `${diameter}px`;
    circle.style.left = `${event.clientX - (btnRect.left + radius)}px`;
    circle.style.top = `${event.clientY - (btnRect.top + radius)}px`;

    const ripple = document.querySelectorAll("a span")[0];

    if (ripple) {
      ripple.remove();
    }

    button.appendChild(circle);
  }

  const buttons = document.querySelectorAll("a");
  for (const button of buttons) {
    button.addEventListener("click", createRipple);
  }
</script>
