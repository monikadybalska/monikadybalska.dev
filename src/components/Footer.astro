---
import Logo from "./Logo.astro";
import Anchor from "./Anchor.astro";
---

<footer>
  <div class="copyright">
    <Logo />
    <div>Designed and coded by Monika Dybalska</div>
  </div>
  <div class="footer-links">
    <Anchor text="Resume" href="cv-monika-dybalska.pdf" variant="text" />
    <Anchor
      text="Email"
      href="mailto:monika.dybalska@hotmail.com"
      variant="text"
    />
    <Anchor
      text="GitHub"
      href="https://github.com/monikadybalska"
      variant="text"
    />
    <Anchor
      text="LinkedIn"
      href="https://www.linkedin.com/in/monika-dybalska/"
      variant="text"
    />
  </div>
</footer>

<style>
  footer {
    background-color: black;
    color: #61dafb;
    display: flex;
    padding: 0 15rem 0 15rem;
    scroll-snap-align: start;
    justify-content: space-between;
    align-items: center;
    min-height: 100vh;
  }

  .copyright {
    max-width: 50%;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .socials {
    height: 40px;
    align-self: center;
  }

  @media screen and (max-width: 1300px) {
    footer {
      padding: 0 10rem 0 3rem;
      align-items: center;
      justify-content: space-between;
    }
  }

  @media screen and (max-width: 700px) {
    footer {
      scroll-snap-align: unset;
      padding: 3rem 1rem 3rem 1rem;
      align-items: center;
      justify-content: space-between;
      min-height: fit-content;
    }
  }
</style>
