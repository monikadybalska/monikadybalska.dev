---
interface Props {
  href?: string;
  image?: string;
  tags?: string[];
  label?: string;
  variant?: string;
}

const { href, image, tags, label, variant = "filled" } = Astro.props;
---

<div class:list={["card-container", { "with-link": href }]}>
  <a href={href} class="card-link"></a>
  <div class:list={["card", variant || "filled"]}>
    <div class="card-header">
      <slot name="title" />
      {label && <p class="label">{label}</p>}
    </div>
    {image && <img src={image} class="card-image" />}
    {
      tags && (
        <div class="tags">
          {tags.map((tag) => (
            <p class="tag">{tag}</p>
          ))}
        </div>
      )
    }
    <slot name="description" />
  </div>
</div>

<style>
  .card-container {
    position: relative;
  }

  .card {
    background-color: black;
    color: white;
    box-sizing: border-box;
    padding: 0.8rem;
    width: 100%;
    height: 100%;
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
    border: solid #61dafb 1px;
  }

  .card.outlined {
    background-color: transparent;
    color: black;
    border-color: black;
  }

  .card-link {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .card-header {
    display: flex;
    gap: 0.8rem;
    align-items: center;
  }

  .card-image {
    width: 100%;
  }

  .card-buttons {
    display: flex;
    justify-content: space-between;
  }

  .card-buttons button {
    width: 100%;
  }

  .label {
    padding: 0.2rem 0.5rem 0.2rem 0.5rem;
    background-color: rgb(97, 218, 251, 1);
    width: fit-content;
    color: black;
    text-transform: uppercase;
    font-size: 0.8rem;
    border-radius: 1rem;
    text-align: center;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    flex-grow: 1;
    align-items: start;
  }

  .tag {
    background-color: transparent;
    color: white;
    padding: 0.2rem 0.5rem 0.2rem 0.5rem;
    border-radius: 1rem;
    border: #61dafb solid 1px;
    height: fit-content;
  }

  .card-container.with-link:hover {
    box-shadow: 0 0 0.5rem 0.1rem rgb(97, 218, 251, 1);
  }
</style>
