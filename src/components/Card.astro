---
import Anchor from "./Anchor.astro";

interface Props {
  title: string;
  href: string;
  image: string;
  tags: string[];
  description: string;
  label?: string;
}

const { title, href, image, tags, description, label } = Astro.props;
---

<div class="card-container">
  <a href={href} class="card-link"></a>
  <div class="card">
    <div class="card-title">
      <h3>{title}</h3>
      {label && <p class="card-label">{label}</p>}
    </div>
    <img src={image} class="card-image" />
    <div class="tags">
      {tags.map((tag) => <p class="tag">{tag}</p>)}
    </div>
    <p>{description}</p>
  </div>
</div>

<style>
  .card-container {
    position: relative;
  }

  .card {
    background-color: black;
    color: white;
    box-sizing: border-box;
    padding: 0.8rem;
    width: 100%;
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
    border: dashed #61dafb 1.5px;
  }

  .card-link {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .card-title {
    display: flex;
    gap: 0.8rem;
    align-items: center;
  }

  .card-image {
    width: 100%;
  }

  .card-buttons {
    display: flex;
    justify-content: space-between;
  }

  .card-buttons button {
    width: 100%;
  }

  .card-label {
    padding: 0.2rem 0.5rem 0.2rem 0.5rem;
    background-color: rgb(97, 218, 251, 1);
    width: fit-content;
    color: black;
    text-transform: uppercase;
    font-size: 0.8rem;
    border-radius: 1rem;
    text-align: center;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background-color: gray;
    color: black;
    padding: 0.2rem 0.5rem 0.2rem 0.5rem;
    border-radius: 1rem;
  }
</style>
